<div class="h-48 bg-cover bg-center rounded" style="background-image: url(<% root_path %>/img/back_3.jpg)">

</div>
<div class="flex justify-between ">
  <div class="">
    <div class="px-2 text-xl text-center text-white bg-orange-600 rounded-full">Podcast Live Room</div>
  </div>
  <div class="">
    <div class="px-2 text-xl text-center text-white bg-orange-600 rounded-full">New Room</div>
  </div>
</div>
<div class="grid grid-cols-12 mx-6 overflow-scroll">
  <div class="col-span-4 md:col-span-3 bg-gray-100 h-64 content-center">
    <div class="text-center px-6">
      <div class="py-2">user_name</div>
      <div class="h-24 bg-cover bg-center rounded-full" style="background-image: url(<% root_path %>/img/back_1.jpg)"></div>
      <div class="py-1">session_id</div>
      <div class="py-1">show</div>
      <div class="flex justify-between">
        <button class="px-4 flex items-center bg-blue-700 text-white rounded hover:bg-gray-100 hover:text-black">
          <i class="fas fa-pencil-alt"></i>
          <p class="hidden sm:block">edit</p> 
        </button>
        <button class="px-4 flex items-center bg-blue-700 text-white rounded hover:bg-gray-100 hover:text-black">
          <i class="far fa-trash-alt"></i>
          <p class="hidden sm:block">Destroy</p>
        </button>
      </div>
    </div>   
  </div>
</div>

<p id="notice"><%= notice %></p>

<div>Rooms</div>

<table>
  <thead>
    <tr>
      <th>Host</th>
      <th>All Channels</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.user.display_name%></td>
        <td><%= room.name %></td>
        <% if room.user == current_user %>
          <td><%= link_to 'channel', play_room_path(room) %></td>
          <td><%= link_to 'Edit', edit_room_path(room) %></td>
          <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= link_to 'Show', room %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user && !current_user.room.present? %>
  <%= link_to 'New Room', new_room_path, params: current_user %>
<% end %>