<%#=這是User資訊頁面%>

<%#=圖區一%>
<div class="flex mx-4 bg-gradient-to-r from-red-500 via-white to-orange-700">
  <%= image_tag @user.avatar_url, class:'w-1/6 m-4 rounded-full' %>
  <div class="flex justify-between w-5/6 items-start">
    <div class="m-4">
      <div class="bg-black rounded p-1 text-xl text-white m-1">
        <%= @user.display_name %>
      </div>
      <div class="flex bg-gray-900 rounded justify-start">
        <div class="text-white m-2"><%= @user.first_name %></div>
        <div class="text-xl text-orange-700 m-auto mr-2"><%= @user.last_name %></div>
      </div>
        <div><%= link_to 'create podcast channel', rooms_path %></div>
    </div>
    <% if @current_user == @user %>
      <%= link_to edit_user_path(@user), class: 'text-white bg-orange-600 p-2 rounded' do %>
        <i class="fas fa-camera"></i>Upload header image
      <% end %>
    <% end %>
  </div>
</div>

<%#=左邊使用者專區%>
<div class="flex m-4 justify-between border-b border-gray-400">
  <div class="mx-4 text-xl m-2">
    <%= link_to "All", user_songs_path(@user.id), class: 'hover:text-orange-600 mr-4' %>
    <button class="hover:text-orange-600 mr-4">Popular Tracks</button>
    <button class="hover:text-orange-600 mr-4">Tracks</button>
    <button class="hover:text-orange-600 mr-4">Albums</button>
    <button class="hover:text-orange-600 mr-4">Playlists</button>
    <button class="hover:text-orange-600 mr-4">Reposts</button>
  </div>
  <div class="flex m-2">
    <button class="mr-4 text-white bg-orange-600 px-2 rounded"><i class="fas fa-balance-scale"></i>Your Insights</button >
    <button class="mr-4"><i class="fas fa-share-square"></i>Share</button >
    <% if current_user == @user %>
      <%= link_to edit_user_path(current_user.id), class: 'mr-4' do %>
        <i class="fas fa-pencil-alt"></i>Edit
      <% end %>
    <% end %>
  </div>
</div>



<div class="grid grid-cols-12 mx-4 ">
  <div class="col-span-12 md:col-span-9 mx-4">
    <div class="text-2xl">Recent</div>
    <%#=左邊專輯專區%>
    <div class="grid grid-cols-12 my-4">
      <img class="col-span-12 md:col-span-2 h-32 w-32 overflow-hidden rounded-full" src="https://i1.sndcdn.com/artworks-5AGGrdLB22OugKjV-yK2AgQ-t500x500.jpg" alt="">    
      <div class="col-span-12 md:col-span-10 w-full">
        <div class="grid grid-cols-12">
          <div class="col-span-2 md:col-span-1">
            <i class="fas fa-arrow-circle-right fa-3x"></i>
          </div>
          <div class="col-span-8 md:col-span-9">
            <p class="text-gray-400 text-xs"><%= @user.display_name %></p>
            <p>Link_to SongName</p>
          </div>
          <div class="col-span-2 md:col-span-2 text-gray-400 text-xs">
            5 days ago
            ###Tag###
          </div>
        </div>

        <%#=超難的音波專區%>
        <div class="">萱大の音波專區</div>
        <%#=留言專區%>
        <div class="flex m-4">
          <img class="w-8" src="https://i1.sndcdn.com/artworks-5AGGrdLB22OugKjV-yK2AgQ-t500x500.jpg" alt="">
          <input class="w-full mx-2" type="text" placeholder="Write a comment">
        </div>


        <%#=歌曲功能專區%>
        <div class="">
          <div class="flex w-2/3 my-4 p-2 justify-around">
            <button class="flex items-center border border-gray-300 px-3 rounded">
              <i class="fas fa-heart"></i>
              <p class="hidden md:block">like</p> 
            </button>
            <button class="flex items-center border border-gray-300 px-3 rounded">
              <i class="fas fa-share-square"></i>
              <p class="hidden md:block">share</p> 
            </button>
            <button class="flex items-center border border-gray-300 px-3 rounded">
              <i class="fas fa-balance-scale-left"></i>
              <p class="hidden md:block">Add to Next up</p> 
            </button>
            <button class="flex items-center border border-gray-300 px-3 rounded">
              <i class="fas fa-bolt"></i>
              <p class="hidden md:block">More</p> 
            </button>
          </div>
        </div>
      </div>
    </div>
  </div> 



      <%#=右邊使用者專區%>
  <div class="col-span-12 md:col-span-3 border-l border-gray-400 px-2">

    <div class="flex text-gray-500 mx-4">
      <button class="mx-2">Follower</button>
      <button class="mx-2">Following</button>
      <button class="mx-2">Tracks</button>
    </div>

    <div class="p-2">
      <div class="flex justify-between text-gray-500 border-b border-gray-300 text-sm p-2">
        <div class="">❤️2 likes</div>
        <div class="">view all</div>
      </div>

        <%#=右邊 user-like area %>
        <%= render './shared/like_area.html.erb', element: current_user %>

      </div>
    </div>

    <div class="flex border-t border-gray-400 m-4">
      <div class="my-3 text-xs table-row-group">
        <div class="">
          <span class="text-gray-500  hover:text-black"><a href="#">Legal</a></span>
            
          <span class="text-gray-500  hover:text-black"><a href="#">Privacy</a></span>
            
          <span class="text-gray-500  hover:text-black"><a href="#">Cookies</a></span>
            
          <span class="text-gray-500  hover:text-black"><a href="#">Imprint</a></span>

          <span class="text-gray-500  hover:text-black"><a href="#">Creator Resources</a></span>
            
          <span class="text-gray-500  hover:text-black"><a href="#">Blog</a></span>
            
          <span class="text-gray-500  hover:text-black"><a href="#">Charts</a></span>
            
          <span class="text-gray-500  hover:text-black"><a href="#">Popular Search</a></span>
        </div>
        
          <div class="mt-2 mb-20">
            Language: English (US)
          </div>

      </div>
    </div>
  </div>  
</div>
