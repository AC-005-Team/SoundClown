<div class="w-full">
  <span>
    <% if current_user.errors.any? %>
      <ul>
        <% current_user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </span>
  <div class="container m-auto bg-white max-w-lg flex flex-col justify-center mt-1 md:mt-12 rounded pb-20 md:px-20 px-8 pt-4">
    <%= form_with model: @user, url: user_path(current_user.id), method: 'put', local: true  do |f| %>
      <div>
        <%= f.label :header, class:'text-gray-800' %>
        <%= f.file_field :file, name: "user[header]", onchange: "showMyImage(this)", class: 'w-full px-2 py-2 focus:outline-none bg-gray-200 border border-black rounded my-3 text-gray-800' %>
        <%= image_tag '', id:'thumbnil' %>
      </div>
      
      <div>
        <%= f.label :avatar, class:'text-gray-800' %>
        <%= f.file_field :file, name: "user[avatar]", onchange: "showMyAvatar(this)", class: 'w-full px-2 py-2 focus:outline-none bg-gray-200 border border-black rounded my-3 text-gray-800' %>
        <%= image_tag '', id:'avatar' %>
      </div>

      <div>
        <%= f.label :email, class:'text-gray-800' %>
        <%= f.text_field :email, class: 'w-full px-2 py-2 focus:outline-none bg-gray-200 border border-black rounded my-3 text-gray-800'%>
      </div>

      <div>
        <%= f.label :display_name, class:'text-gray-800' %>
        <%= f.text_field :display_name, class: 'w-full px-2 py-2 focus:outline-none bg-gray-200 border border-black rounded my-3 text-gray-800'%>
      </div>

      <div>
        <%= f.label :first_name, class:'text-gray-800' %>
        <%= f.text_field :first_name, class: 'w-full px-2 py-2 focus:outline-none bg-gray-200 border border-black rounded my-3 text-gray-800'%>
      </div>

      <div>
        <%= f.label :last_name, class:'text-gray-800' %>
        <%= f.text_field :last_name, class: 'w-full px-2 py-2 focus:outline-none bg-gray-200 border border-black rounded my-3 text-gray-800'%>
      </div>

      <div>
        <%= f.label :gender, class:'text-gray-800' %>
        <%= f.text_field :gender, class: 'w-full px-2 py-2 focus:outline-none bg-gray-200 border border-black rounded my-3 text-gray-800'%>
      </div>

      <div>
        <%= f.label :age, class:'text-gray-800' %>
        <%= f.number_field :age, class: 'w-full px-2 py-2 focus:outline-none bg-gray-200 border border-black rounded my-3 text-gray-800'%>
      </div>

      <div>
        <%= f.label :city, class:'text-gray-800' %>
        <%= f.text_field :city, class: 'w-full px-2 py-2 focus:outline-none bg-gray-200 border border-black rounded my-3 text-gray-800'%>
      </div>

      <div>
        <%= f.label :country, class:'text-gray-800' %>
        <%= f.text_field :country, class: 'w-full px-2 py-2 focus:outline-none bg-gray-200 border border-black rounded my-3 text-gray-800'%>
      </div>

      <div class="flex mt-3 mb-12 text-center">
        <%= f.submit 'Save Changes', class: "w-full px-2 py-2 text-white rounded-l bg-orange-700"%>
        <%= link_to 'Cancel', user_path, class: "w-full px-2 py-2 text-white rounded-r bg-red-700"%>
      </div>

    <% end %>
  </div>
</div>
