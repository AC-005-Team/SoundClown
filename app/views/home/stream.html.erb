<div class="flex">
  <%#左邊區域%>
  <div class="col-span-12 md:col-span-9 mx-4">
    <div class="text-lg text-gray-600 mb-4">Hear the latest posts from the people you’re following:</div>
    
    <div class="flex flex-start items-center">
      <img class="w-8 rounded-full mr-4" src="https://i1.sndcdn.com/artworks-5AGGrdLB22OugKjV-yK2AgQ-t500x500.jpg" alt="">
      <button class="mr-4">user_name</button>
      <span class="text-gray-500">posted 1 month ago</span>
    </div>

        <% @songs.each do |song|%>
          <% if song.image_url %>

    <div class="flex xl:max-h-full">
      <%#= 歌曲封面 %>
      <div class="w-1/6 mr-4 mb-4">
        <%= link_to image_tag(song.image_url), song_path(song.id), class:'' %>      
      </div>
      <div class="w-5/6 flex flex-col justify-around mx-2">
        <div class="flex justify-between">
          <div class="text-sm flex">
            <%#= 小型播放鍵 %>
            <button class="">
              <i class="fas fa-play fa-2x" style="color:orange"></i>
            </button>

            <%#= 歌曲名稱 %>            
            <div>
              <%= link_to current_user.display_name, user_path(current_user), class: 'text-gray-400 text-xs'%>
              <%= content_tag(:li,content_tag(:a, song.name, href: song_path(song)), data: {value: song.name} ) %>
            </div>
          </div>

          <%#= 歌曲Tag標籤區 %>
          <div class="flex">
            <% if song.tags.length > 0 %>
              <% song.tags.each do |tag| %>
                <div class="bg-gray-400 rounded text-xs text-white text-center p-1">
                  <%= tag.name %>
                </div>
              <% end %>
            <% end %> 
          </div>         
        </div>
        <div class="">萱大の音波專區</div>

        <div class="flex">
          <img class="w-8" src="https://i1.sndcdn.com/artworks-5AGGrdLB22OugKjV-yK2AgQ-t500x500.jpg" alt="">
          <input class="w-full bg-gray-200 p-2" type="text" placeholder="Write a comment">
        </div>
        
        <%#= 歌曲功能區 %>
        <div class="flex justify-between">
          <div class="flex">
            <button class="flex border border-gray-300 px-3 rounded">
              <i class="fas fa-heart"></i>
              <p class="hidden md:block">like</p> 
            </button>
            <button class="flex border border-gray-300 px-3 rounded">
              <i class="fas fa-share-square"></i>
              <p class="hidden md:block">share</p>
            </button>
            <button class="flex border border-gray-300 px-3 rounded">
              <i class="fas fa-balance-scale-left"></i>
              <p class="hidden md:block">Add to Next Up</p> 
            </button>
            <button class="flex border border-gray-300 px-3 rounded">
              <i class="fas fa-bolt"></i>
              <p class="hidden md:block">More</p>
            </button>
          </div>
          <div class="flex">
            <button class="mr-4 flex">
              <i class="fas fa-play"></i>
              <p class="hidden md:block">12.5M</p>
            </button>
            <button class="flex">
              <i class="fas fa-comments"></i>
              <p class="hidden md:block">233</p>
            </button>
          </div>
        </div>
      </div>
    </div>
          <% end %>
        <% end %>
  </div>
  <%#右邊邊區域%>
  <div class="col-span-3 text-gray-600 text-sm m-4 hidden sm:block">
    <div class="flex justify-between border-b border-gray-400 mb-4">
      <div class="">
        <i class="fas fa-user-friends"></i>
        who to follow
      </div>
      <div class="">
        <i class="fas fa-redo"></i>
        Refresh
      </div>
    </div>
    <div class="flex">
      <img class="w-1/5 rounded-full" src="https://i1.sndcdn.com/artworks-5AGGrdLB22OugKjV-yK2AgQ-t500x500.jpg" alt="">
      <div class="w-4/5 flex-col items-end">
        <p class="text-black">Tipsy Records</p> 
        <div class="flex justify-between text-xs">
          <div class="">
            <i class="fas fa-user-friends"></i>
            60.7K
            <i class="fab fa-soundcloud"></i>
            33
          </div>
          <button class="flex items-center border border-gray-400 rounded px-2 text-black">
            <i class="fas fa-user-check"></i>
            <p class="">Fllow+</p> 
          </button>
        </div>
      </div>
    </div>

    <div class="flex justify-between border-b border-gray-400 mb-4">
      <div class="">
        <i class="fas fa-heart"></i>
        10 likes
      </div>
      <div class="">
        View All
      </div>
    </div>

    <div class="flex">
      <img class="w-1/5" src="https://i1.sndcdn.com/artworks-5AGGrdLB22OugKjV-yK2AgQ-t500x500.jpg">
      <div class="w-4/5 text-sm">
        <p class="">user_name</p>
        <p class="text-black">user_name</p>
        <div class="flex justify-around">
          <a href=""><i class="fas fa-arrow-right"></i>261K</a>
          <a href=""><i class="fas fa-heart"></i>3315</a>
          <a href=""><i class="fas fa-history"></i>60</a>
          <a href=""><i class="fas fa-comment-dots"></i>101</a>
        </div>
      </div>
    </div>

    <div class="flex">
      <div class="my-3 text-xs table-row-group">
        <div class="text-gray-500">
          <span class="hover:text-black"><a href="#">Legal</a></span>-
          <span class="hover:text-black"><a href="#">Privacy</a></span>-
          <span class="hover:text-black"><a href="#">Cookies</a></span>-
          <span class="hover:text-black"><a href="#">Imprint</a></span>-
          <span class="hover:text-black"><a href="#">Creator Resources</a></span>-
          <span class="hover:text-black"><a href="#">Blog</a></span>-
          <span class="hover:text-black"><a href="#">Charts</a></span>-
          <span class="hover:text-black"><a href="#">Popular Search</a></span>
        </div>
          <div class="flex mt-2 mb-20">
            <button class="text-blue-500 hover:text-black pr-2">Language:</button>
              English (US)
          </div>
      </div>
    </div>

  </div>

</div>

<% @songs.each do |song|%>
  <% if song.image_url %>
      <%= image_tag song.image_url, class:'h-32 max-w-xl mr-4' %>
        
        <%= content_tag(:li,content_tag(:a, song.name, href: song_path(song)), data: {value: song.name} ) %>
      
      
        <%= content_tag(:li,song.intro, data: {value: song.intro} ) %>
      
      
        <% if song.tags.length > 0 %>
          <% song.tags.each do |tag| %>
            <%= tag.name %>
          <% end %>
        <% end %>
        
  <% end %>
<% end %>  