<div class="grid grid-cols-12 mt-4 ml-6">
  <div class="col-span-2 md:col-span-1 rounded-full h-0 overflow-hidden" style="padding-bottom:100%">
    <% if reply.user.avatar_url %>
      <%= image_tag reply.user.avatar_url, class: 'rounded-full' %>
    <% end %>
  </div>
  <div class="col-span-7 md:col-span-8 mx-2">
    <div class="flex">
      <button> <%=reply.user.display_name%></button>
      <p class ="mx-1"> at</p>
      <% timepoint = Comment.find(reply.reply_id).timepoint if reply.reply_id %>
      <p><%= timepoint.to_i >= 3600 ? Time.at(timepoint.to_i).utc.strftime("%H:%M:%S") : Time.at(timepoint.to_i).utc.strftime("%M:%S") %></p>
    </div>
    <p class=""> <%=reply.content%> </p>
  </div>
  <div class="col-span-3 md:col-span-3 flex justify-end text-xs pr-8">
    <p class="text-right"><%= time_diff(DateTime.now, reply.created_at) %></br>
    <button class="border border-gray-400 p-1 rounded"> <%= link_to "Delete", comment_path(song_id: @song.id, id: reply.id),method: "delete", data: {confirm: "Do you really want to remove this comment?"} if is_current_user?(reply.user)%> </button>
  </div>
</div>