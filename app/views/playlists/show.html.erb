<h1><%= @playlist.name%></h1>

<h2>playlist - song list</h2>
<% if @playlist.favorited_by?(current_user) %>
    <i class="fas fa-heart"></i>
    <%= link_to "Liked", like_playlist_path(@playlist), method: "post" %>
  <% else %>
    <i class="far fa-heart"></i>
    <%= link_to "Like", like_playlist_path(@playlist), method: "post" %>
  <% end%>  
  <i class="fas fa-heart"> <%=@playlist.liked_users.count %> </i>

  

<% @playlist.songs.each do |song| %>
  <ul>
    <li> <%= image_tag song.image_url, width: '200px' %> </li>
    <%= content_tag(:li,song.name, data: {value: song.name} ) %>
    <%= content_tag(:li,song.intro, data: {value: song.intro} ) %>
    <%= content_tag(:li, 'play ▶', class:'getURL', data: {id: song.id} ) %>
  </ul>

  <!-- 愛心 -->
  <svg class="heart" width="25px" viewBox="0 0 500 500" >
      <path d="M295.706,35.522C295.706,35.522,295.706,35.522,295.706,35.522c-34.43-0.184-67.161,14.937-89.339,41.273
      c-22.039-26.516-54.861-41.68-89.339-41.273C52.395,35.522,0,87.917,0,152.55C0,263.31,193.306,371.456,201.143,375.636
      c3.162,2.113,7.286,2.113,10.449,0c7.837-4.18,201.143-110.759,201.143-223.086C412.735,87.917,360.339,35.522,295.706,35.522z"/>
  </svg>

  <div class="dropdown">
    <button class="dropbtn">+</button>
    <div id="myDropdown" class="dropdown-content">
      <%= link_to "add to play next", '###' , id: 'addtoplay', data: {id: song.id}  %>
      <%#= link_to "add to playlist", list_add_path(song.id), data: {}  %>
    </div>
  </div>
<% end %>
<%= content_tag(:button, "播放整個清單 ▶", id: 'play_playlist',data: {id: @playlist.id}  ) %>

