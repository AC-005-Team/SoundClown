<div class="w-full">
  <div class="container m-auto bg-white max-w-sm flex flex-col justify-center mt-1 md:mt-12 rounded px-8">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field mt-4">
        <%= f.label :email, class:'text-black' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full px-2 py-2 focus:outline-none bg-gray-200 border border-black rounded my-3 text-black' %>
      </div>

      <div class="field">
        <%= f.label :password, class:'text-black' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'w-full px-2 py-2 focus:outline-none bg-gray-200 border border-black rounded my-3 text-black' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field text-black">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Log in", class: "w-full px-2 py-2 text-white rounded bg-orange-700" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
    <div class="pb-8"></div>
  </div>
</div>
