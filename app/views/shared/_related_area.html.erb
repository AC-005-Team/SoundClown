<% if element %>
  <% element.each do |song| %>
    <div class="my-4 flex">
    <%= link_to song_path(song), class:'flex w-1/5 items-center' do %>
      <%= image_tag song.image_url if song.image_url %>
    <% end %>
      <div class="w-4/5 mx-2 text-xs">
        <div class="text-gray-500"><%= song.name %></div>
        <div class=""><%= song.intro %></div>
        <div class="flex justify-around text-gray-500">
          <span class="played_times_comments<%=@song.id%>"><i class="fas fa-chevron-circle-right"></i><%= song.played_times %></span>
          <i class="fas fa-heart"></i><%= song.liked_users.size%>
          <i class="fas fa-retweet"></i><%= song.reposts.size %>
          <%= link_to song_path(song) do %>
            <i class="fas fa-comment-dots"></i><%= song.comments.size %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
