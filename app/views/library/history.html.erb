<div class="flex text-2xl m-4 border-b border-gray-400 p-2">
  <button class="mr-4 hover:text-orange-500"><%= link_to "Overview", library_library_index_path%></button>
  <button class="mr-4 hover:text-orange-500"><%= link_to "Likes", likes_library_index_path%></button>
  <button class="mr-4 hover:text-orange-500"><%= link_to "Playlists", sets_library_index_path%></button>
  <button class="mr-4 hover:text-orange-500"><%= link_to "Following", following_library_index_path%></button>
  <button class="mr-4 text-orange-600 hover:text-orange-500"><%= link_to "History", history_library_index_path%></button>
</div>

<div class="m-4 p-2">
  <div class="flex justify-between text-gray-400">
    <span class="">Hear what the people you follow have posted:</span>
    <div class="">    
      <button class="border border-gray-400 rounded px-1 w-full text-sm text-left">Clean All History</button>
      <input class="border border-gray-400 rounded w-full px-1" type="text" placeholder="Filter">
    </div>
  </div>
    <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-4">

         <% @followees.each do |followee|%>
          <% if followee.songs.each do |song| %>
            <% song.image_url %>
              <div class="my-2 mr-2 flex sm:flex-col justify-between flex-row">
                <%#= 歌曲圖片 %>
                  <div class="align-top w-32 h-32 bg-black overflow-hidden">
                    <%= link_to image_tag(song.image_url), song_path(song.id), class:'block' %>
                  </div>
                <%#= 歌曲名稱、介紹、TAG標籤 %>
                  <div class="text-2xl sm:text-sm hover:bg-gray-200 rounded">
                    <%#= 歌曲名稱 %>
                    <%= content_tag(:li,content_tag(:a, song.name, href: song_path(song)), data: {value: song.name} ) %>
                    <%= content_tag(:li,song.intro, data: {value: song.intro}, class:'text-xs text-gray-400' ) %>
                  </div>
              <% end %>
            </div>
          <% end %>
        <% end %>  

      </div>
    </div>