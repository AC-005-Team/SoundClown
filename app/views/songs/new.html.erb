<div class="bg-white w-full bg-opacity-75">
  <div class="container m-auto bg-white max-w-lg flex flex-col justify-center mt-12 rounded">
    <%= link_to 'go back', user_songs_path, class: "w-full px-2 py-2 text-white text-center rounded bg-orange-600 my-3"%>
    <% if @song.errors.any? %>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @song, url: user_songs_path(current_user.id), local: true do |f| %>
    <div>
      <%= f.label :image %>
      <%= f.file_field :image , class: 'w-full px-2 py-2 focus:outline-none bg-gray-200 border border-black rounded my-3'%>
    </div>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name , class: 'w-full px-2 py-2 focus:outline-none bg-gray-200 border border-black rounded my-3'%>
    </div>
    <div>
      <%= f.label :intro %>
      <%= f.text_field :intro , class: 'w-full px-2 py-2 focus:outline-none bg-gray-200 border border-black rounded my-3'%>
    </div>
    <div>
      <%= f.label :track %>
      <%= f.file_field :track , class: 'w-full px-2 py-2 focus:outline-none bg-gray-200 border border-black rounded my-3'%>
    </div>
    <div class="w-full px-2 py-2 text-center rounded bg-orange-600 my-3">
      <%= f.submit %>
      </div>
    <% end %>

  </div>
</div>