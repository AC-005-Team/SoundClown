<%#=專輯播放頁面%>
<%#=第一背景色區%>
<div class="mx-4">
  <div class="flex bg-gradient-to-r from-red-500 via-white to-orange-700">
    <div class="w-2/3 flex-col-reverse space-y-32 justify-between m-5">
      <div class="flex">
        <%= content_tag(:li, '▶', class:'getURL fa-3x rounded-full', data: {id: @song.id} ) %>
        <div class="">
          <div class="bg-black rounded p-1 text-white m-1">
            <%=@song.user.display_name%>
          </div>
          <div class="flex bg-gray-900 rounded">
            <div class="text-sm text-white m-2"><%= @song.name %></div>
          </div>
        </div>
        <div class="m-4 text-xl text-black">
          <div class="">
            1 month ago
          </div>
          <div class="">
            #Dance & EDM
          </div>
        </div>
      </div>

      <div> <%#=萱大大專區%>
        <div class="w-4/5 waveform-wrap b-0" data-path="<%= @song.track_url %>" data-filename="<%= @song.get_filename %>">
          <div class="waveform-dummy song-waveform">
          </div>
        </div>
      </div>

    </div>
      <%#=右邊大圖區%>
    <div class="w-1/4 p-4">
      <%= image_tag @song.image_url, class:''%> 
    </div>
  </div>
</div>

<%#=左邊專區起始%>
<div class="grid grid-cols-12 m-4">
  <div class="col-span-12 md:col-span-9 m-4">
    <%#=左邊專區：最上面的Comment區域%>
    <div class="border-b border-gray-400">
      <div class="flex ">
        <img class="w-auto h-8" src="https://i1.sndcdn.com/artworks-48wHUXnYlyIAyhPm-kAqlLQ-t500x500.jpg" alt="">
        <%= form_with(model:@comment, url:song_comments_path(@song), class: "w-9/12 mx-2 rounded") do |f|%>
          <%= f.text_field :content, placeholder: "Write a comment", class: "w-9/12 px-2 border border-gray-400 rounded"%>
          <%= f.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold px-2 rounded"%>
        <% end %>
      </div>
      <div class="flex my-2 p-2 justify-around text-sm" data-controller="toggle" data-toggle-song="<%= @song.id %>">
        <% if @song.favorited_by?(current_user) %>
          <button class="flex border border-orange-500 text-red-600 p-1 rounded" data-target="toggle.likeBtn" data-action="click->toggle#like">
            <i class="fas fa-heart" data-target="toggle.heart"></i> 
            <span class="hidden md:block">Liked</span>
          </button>
        <% else %>
          <button class="flex border border-gray-400 p-1 rounded" data-target="toggle.likeBtn" data-action="click->toggle#like">
            <i class="far fa-heart" data-target="toggle.heart"></i>
            <span class="hidden md:block">Like</span>
          </button>
        <% end%>

        <% if @song.reposted_by?(current_user) %>
          <button class="flex border border-orange-500 text-red-600 p-1 rounded" data-target="toggle.repostBtn" data-action="click->toggle#repost">
            <i class="fas fa-retweet"></i>
            <span class="hidden md:block">Reposted</span>
          </button>
        <% else %>
          <button class="flex border border-gray-400 p-1 rounded" data-target="toggle.repostBtn" data-action="click->toggle#repost">
            <i class="fas fa-retweet"></i>
            <span class="hidden md:block">Repost</span>
          </button>
        <% end%> 
        <button class="flex modal-btn share-btn border border-gray-400 p-1 rounded">
          <i class="fas fa-share-square"></i>
          <p class="hidden md:block">Share</p> 
        </button>
        <button class="flex border border-gray-400 p-1 rounded">
          <i class="fas fa-stream"></i>
          <p class="hidden md:block">Add to Next Up</p> 
          
        </button>
        <button class="flex modal-btn addplaylist-btn border border-gray-400 p-1 rounded">
          <i class="fas fa-plus"></i>
          <p class="hidden md:block">Add to Playlist</p> 
        </button>
        <button class="flex border border-gray-400 p-1 rounded">
          <i class="fas fa-folder-plus"></i>
          <%=link_to "Create Playlist", new_user_playlist_path(current_user), class:'hidden md:block' %>
        </button>
        <button class="p-1 text-gray-600">
          <i class="fas fa-chevron-circle-right"></i>
          10.2K
        </button>
        <button class="p-1 text-gray-600">
          <i class="fas fa-heart"></i>
          <%=@song.liked_users.count %> 
        </button>
        <button class="p-1 text-gray-600">
          <i class="fas fa-retweet"></i>
          <%=@song.reposted_users.count %> 
        </button>

      </div>
    </div>
    <div class="flex flex-col sm:flex-row text-sm">
      <%#=左邊專區大頭照那%>
      <div class="flex justify-between w-1/5 sm:w-1/6 sm:block mr-4 h-16 text-lg" data-controller="follow" data-follow-user="<%= @song.user.id %>">
        <img class="rounded-full mt-2 mr-4 w-3/4" src="https://i1.sndcdn.com/avatars-000607373832-b25xhj-t200x200.jpg" alt="">
        
        <div class="flex items-center p-1 m-2">
          <i class="far fa-star"></i>        
          <p class="w-16"><%=@song.user.display_name%></p>
        </div>

        <div class="flex justify-start items-center p-1 m-2">
          <i class="fas fa-user-friends"></i>
          <p class="text-gray-400 mx-2"><%=@song.user.followers.count%></p>
          <i class="fab fa-soundcloud"></i>
          <p class="text-gray-400 mx-2"><%=@song.user.songs.count%></p>
        </div>

        <% if @song.user.followed_by?(current_user) %>
          <button class="flex bg-orange-500 text-white border-orange-500 border p-1 rounded" data-song-id="<%= @song.id %>" data-target="follow.followBtn" data-action="click->follow#follow">
            <i class="fas fa-user-check"></i>
            <p class="mx-2">Following</p>
          </button>
        <% else %>
          <button class="flex items-center bg-white text-orange-500 border-orange-500 border rounded m-4" data-song-id="<%= @song.id %>" data-target="follow.followBtn" data-action="click->follow#follow">
            <i class="fas fa-user-check"></i>
            <p class="mx-2">Follow</p>
          </button>
        <% end%> 
      </div>
      <%#=正中間留言區%>
      <div class="w-full sm:w-4/5">
        <%#=正中間留言總數%>
        <div class="flex text-gray-400 m-4 p-2 border-b border-gray-400">
          <i class="fas fa-comments"></i>
          <p class="mx-1"><%=@comments.count%></p> 
          <p class="mx-1">comments</p>
        </div>
        <%#=顯示正中間留言區那%>
        <div class="text-xs" id="comments">
          <% @comments.each do |comment| %>
            <div class="grid grid-cols-12 h-12 main-comment">
              <img class="col-span-1 h-12 rounded-full" src="https://i1.sndcdn.com/avatars-Y57TiYzkrpCtP0pD-w8fdEA-t120x120.jpg" alt="">
              
              <div class="col-span-9 mx-2">
                <div class="flex">
                  <button> <%=comment.user.display_name%></button>  
                  <p class="mx-2">at:</p>               
                  <p> <%=comment.created_at%> </p>

                </div>
                <p class=""> <%=comment.content%> </p>
              </div>

              <div class="col-span-2 text-gray-400">
                <button class="border border-gray-400 p-1 rounded"> <i class="fas fa-reply"></i> Reply </button>
                <%if is_current_user?(comment.user)%>
                  <button class="border border-gray-400 p-1 rounded"> <%= link_to "Delete", comment_path(song_id: @song.id, id: comment.id),method: "delete", data: {confirm: "Do you really want to remove this comment?"}%> </button> 
                <%end%>
              </div>
            </div>
            <%#=顯示正中間針對留言的留言那%>
            <div id= <%=comment.id%>>
              <% comment.replies.each do |reply| %>
              <div class="grid grid-cols-12 mt-4 ml-6">
                <img class="col-span-1 h-10 rounded-full" src="https://i1.sndcdn.com/avatars-Y57TiYzkrpCtP0pD-w8fdEA-t120x120.jpg" alt="">
                <div class="col-span-9 mx-2">
                  <div class="flex">
                    <button> <%=reply.user.display_name%></button>
                    <p class="mx-2">at:</p>               
                    <p> <%=reply.created_at%> </p>

                  </div>
                  <p class=""> <%=reply.content%> </p>
                </div>
                <div class="col-span-2 text-gray-400">
                  <%if is_current_user?(comment.user)%>
                  <button class="border border-gray-400 p-1 rounded"> <%= link_to "Delete", comment_path(song_id: @song.id, id: reply.id),method: "delete", data: {confirm: "Do you really want to remove this comment?"} if is_current_user?(reply.user)%> </button>
                  <%end%>
                </div>
              </div>
              <% end %>
            </div>
          
            <div class="flex mt-4 ml-6">
            <%= form_with(model: @comment, url:song_comments_path(song_id: @song, reply_id: comment.id), class: "w-11/12 mx-4") do |f|%>
              <%= f.text_field :content, placeholder: "Reply to this comment", class: "w-10/12 py-2 px-4 border border-gray-400 rounded"%>
              <%= f.submit "Reply", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-2 rounded"%>
            <% end %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>


<%#=右邊專區%>
  <div class="col-span-12 md:col-span-3 m-4">
    <div class="flex justify-between text-gray-500 border-b border-gray-300 text-sm p-2">
      <div class=""><i class="fas fa-heart"></i>Related Tracks</div>
      <button class="">view all</button>
    </div>

    <div class="my-4 flex">
      <img class="w-1/5" src="https://i1.sndcdn.com/artworks-tzoA3a4voEv4g77c-Z5qUqQ-t120x120.jpg" alt="">
      <div class="w-4/5 mx-2 text-xs">
        <div class="text-gray-500">Cherokee Recordings</div>
        <div class="">Dean Robert - Morning</div>
        <div class="flex justify-around">
          <a href="">➡️261K</a>
          <a href="">❤️3315</a>
          <a href="">⭕️60</a>
          <a href="">☁️101</a>
        </div>
      </div>
    </div>

    <div class="flex border-t border-gray-400">
      <div class="my-3 text-xs table-row-group">

        <div class="text-gray-500">
          <span class="hover:text-black"><a href="#">Legal</a></span>
            
          <span class="hover:text-black"><a href="#">Privacy</a></span>
            
          <span class="hover:text-black"><a href="#">Cookies</a></span>
            
          <span class="hover:text-black"><a href="#">Imprint</a></span>

          <span class="hover:text-black"><a href="#">Creator Resources</a></span>
            
          <span class="hover:text-black"><a href="#">Blog</a></span>
            
          <span class="hover:text-black"><a href="#">Charts</a></span>
            
          <span class="hover:text-black"><a href="#">Popular Search</a></span>
        </div>
        
          <div class="mt-2 mb-20">
            Language: English (US)
          </div>

      </div>
    </div>
  </div>

  
</div>

